<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4BFFFFFF" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/homeBoxTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textAlignment="center"
            android:text="home"
            android:fontFamily="@font/coolvetica"/> />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/logHomeButton"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/log_icon" />

            <ImageButton
                android:id="@+id/overviewHomeButton"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/overview_icon" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/profileHomeButton"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/profile_icon" />

            <ImageButton
                android:id="@+id/exitHomeButton"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/exit_icon" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>